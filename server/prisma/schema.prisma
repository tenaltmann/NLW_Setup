generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// CRIANDO O SQL A PARTIR DAQUI

model Habit {
  id            String          @id @default(uuid()) //GERA UM ID PRO HABITO
  title         String //TITULO DO HABITO
  created_at    DateTime //DATA QUE FOI CRIADO

  dayHabits     DayHabit[]
  weekDays HabitWeekDays[]

  @@map("habits") // NOME QUE TABELA SERÁ CRIADA
}

model HabitWeekDays {
  id       String @id @default(uuid())
  habit_id String
  week_day String

  habit   Habit  @relation(fields: [habit_id], references: [id])

  @@unique([habit_id, week_day])
  @@map("habit_week_days")
}

model Day {
  id   String   @id @default(uuid()) //GERA UM ID PRO DIA
  date DateTime //DEFINE O DATA

  dayHabits DayHabit[]

  @@unique([date]) //TORNA O DIA ÚNICO DE MODO A NÃO PERMITIR CRIAÇÃO DE DOIS DIAS IGUAIS
  @@map("days") // NOME QUE TABELA SERÁ CRIADA
}

model DayHabit {
  id String @id @default(uuid()) //GERA UM ID PRO DIA

  day_id   String
  habit_id String

  day   Day   @relation(fields: [day_id], references: [id])
  habit Habit @relation(fields: [habit_id], references: [id])

  @@unique([day_id, habit_id]) // IMPEDE QUE O MESMO HÁBITO SEJA COMPLETADO DUAS VEZES NO MESMO DIA
  @@map("day_habits") // NOME QUE TABELA SERÁ CRIADA
}
